<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.general.miaosha.business.sample.mapper.UserMapper">
    <select id="selectUserPage" resultType="com.general.miaosha.business.sample.entity.User">
        select *
        from user
        <where>
            <if test="selectInt != null">
                age = #{selectInt}
            </if>
            <if test="selectStr != null">
                AND name = #{selectStr}
            </if>
        </where>
    </select>
</mapper>
